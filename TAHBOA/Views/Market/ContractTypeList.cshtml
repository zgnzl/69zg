
@using TAHB.Model;
@{
    Layout = null;
    List<合同类别> models = ViewBag.models;
    int pagesize = ViewBag.pagesize;
    int currentpage = ViewBag.currentpage;
    int index = ViewBag.pagesize * (ViewBag.currentpage - 1);
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            角色列表
        </header>

        <table class="table table-striped table-advance table-hover">
            <tbody>
                <tr>
                    <th><i class=""></i>No</th>
                    <th style="min-width: 100px;"><i class="icon_tag"></i> 代码</th>
                    <th style="min-width: 100px;"><i class="icon_tag"></i> 名称</th>
                    <th style="min-width: 100px;"><i class="icon_tag"></i> 备注</th>
                    <th style="min-width: 140px;"><i class="icon_cogs"></i> 操作</th>
                </tr>
                @foreach (合同类别 info in models)
                {
                    <tr>
                        <td>@(++index)</td>
                        <td>@info.code</td>
                        <td>@info.name</td>
                        <td>@info.other</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" onclick="addContractType()" href="javascript:void(0)" data-toggle="tooltip" title="新增名录"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success" onclick="updatetContractType('@info.id','@info.name')" href="javascript:void(0)" data-toggle="tooltip" title="修改名录"><i class="icon_cog"></i></a>
                                <a class="btn btn-danger" onclick="delContractType('@info.id','@info.name')" href="javascript:void(0)" data-toggle="tooltip" title="删除名录"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    @Html.Partial("pages")
</div>

<div id="modal_body_DelContractType" style="display:none">
    删除后无法找回，确认删除？
</div>
<script>
    function addContractType() {
        modal_add("新增合同类别", "取消", "保存", "Market/AddContractType");
    }
    function delContractType(id, name) {
        modal("删除合同类别: " + name, "modal_body_DelContractType", "取消", "删除", "Market/DelContractType/" + id);
    }
    function updatetContractType(id, name) {

        modal_update(id, "修改合同类别: " + name, "取消", "修改", "Market/UpdateContractType");
    }
</script>

